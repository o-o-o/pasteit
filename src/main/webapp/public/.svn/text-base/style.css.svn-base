body{padding:0px; margin:0px; background:url(mainbg.gif) 0 0 repeat-x; font:14px/20px Arial, Helvetica, sans-serif;}
div, p, ul, h1, h2, h3, form, label{margin:0px; padding:0px;}
ul{list-style-type:none;}

#topPan{width:729px; height:317px; position:relative; margin:0 auto;}

#topPan ul{width:729px; height:44px; background:url(topmenubg.jpg) 0 0 no-repeat; font-size:13px; position:absolute; top:0px; left:0px;}
#topPan ul li{width:114px; float:left;}
#topPan ul li.leftpadding{padding:0 0 0 59px; width:86px; background: url(homebg.gif) 100% 0 no-repeat #fff; color:#674E00; text-decoration:none; text-align:center; line-height:44px;}
#topPan ul li a{width:114px; height:44px; display:block; background:url(menubg-normal.gif) 0 0 repeat-x #F2F2F2; color:#674E00; text-decoration:none; text-align:center; line-height:44px;}
#topPan ul li a:hover{width:114px; background:#fff; color:#674E00; text-decoration:none;}

#topPan #logo{width:63px; height:73px; position:absolute; top:108px; left:46px;}
#topPan h1{width:160px; height:40px; display:block; color:#B38800; position:absolute; top:88px; left:114px; font-size:32px; line-height:16px; padding:41px 0 0; font-weight:normal;}

#topPan h2{width:315px; height:239px; background:url(header.jpg) 0 0 no-repeat; position:absolute; top:77px; right:0px; text-indent:-20000px;}

#topPan form{width:680px; height:246px; background:url(formarea.gif) 0 0 no-repeat #fff;  color:#6E6E6E; position:absolute; top:242px; left:100px; font:18px/46px Georgia, "Times New Roman", Times, serif;}
#topPan form label{width:80px; display:block; padding:0 0 0 72px; background:url(icon.jpg) no-repeat;}
#topPan form textarea{width:480px; height:320px; float:left; display:block; margin:12px 14px 0 0; font-size: 9pt;}
#topPan form input.button{width:50px; height:19px; float:left; display:block; border:none; background:url(button.gif) 0 0 no-repeat #F2F2F2; font-size:14px; line-height:19px; font-weight:bold; color:#fff; text-align:center; margin:12px 0 0;}

#location {margin-top: 240px; font-size: 9pt; margin-left: 0px; position: absolute;}
#clip {margin-top: 240px; font-size: 9pt; margin-left: 205px; position: absolute; display:block; border:none; background:url(button.gif) 0 0 no-repeat #F2F2F2; font-size:14px; line-height:19px; font-weight:bold; color:#fff; text-align:center; }
#code {margin-top: 280px; position: absolute; width: 720px; height: 320px; overflow: auto; font-size: 9pt;}

